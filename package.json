  "bugs": {
    "url": "https://github.com/colobas/zotero-tree-style-tabs/issues"
  },
  "homepage": "https://github.com/colobas/zotero-tree-style-tabs#readme",
  "updateURL": "https://github.com/colobas/zotero-tree-style-tabs/releases/latest/download/update.json",
  "dependencies": {
    "zotero-plugin-toolkit": "^5.1.0-beta.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.9.0",
    "chokidar": "^4.0.1",
    "compressing": "^1.10.1",
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.0",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "replace-in-file": "^8.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "zotero-types": "^3.1.0"
  }
