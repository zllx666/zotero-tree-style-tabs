{
  "name": "zotero-tree-style-tabs",
  "version": "1.0.0",
  "description": "Tree Style Tabs for Zotero - organize your tabs in a tree hierarchy",
  "config": {
    "addonName": "Tree Style Tabs for Zotero",
    "addonID": "tree-style-tabs@zotero.org",
    "addonRef": "treestyletabs",
    "addonInstance": "TreeStyleTabs",
    "prefsPrefix": "extensions.zotero.treestyletabs"
  },
  "main": "src/index.ts",
  "scripts": {
    "start": "node scripts/start.mjs",
    "build": "tsc --noEmit && node scripts/build.mjs production",
    "build:dev": "node scripts/build.mjs development",
    "lint": "prettier --write . && eslint --fix .",
    "lint:check": "prettier --check . && eslint .",
    "release": "node scripts/release.mjs",
    "test": "echo \"No tests yet\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colobas/zotero-tree-style-tabs.git"
  },
  "author": "Guilherme Pires <mail@gpir.es>",
